<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    android:background="@drawable/bg.png"
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/sasha"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50px"
        android:text="sasha" />

    <Button
        android:id="@+id/button"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_margin="60px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="0px"
        android:layout_marginRight="0px"
        android:layout_marginBottom="0px"
        android:onClick="show_booking_page"
        android:text="@string/Забронювати"
        android:background="@color/colorAccent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:onClick="show_my_booking"
        android:text="@string/Моїбронювання" />

</LinearLayout>